{{- $secrets := dict }}
{{- range listSecrets "74834480-e1bb-4c53-81a1-ae3aaa9bd2de" "prod" "/nitter" }}
{{- $_ := set $secrets .Key .Value }}
{{- end }}
[Server]
address = "0.0.0.0"
port = 8080
https = false
httpMaxConnections = 100
staticDir = "./public"
title = "nitter"
hostname = "{{ get $secrets "HOST" }}"

[Cache]
listMinutes = 240
rssMinutes = 10
redisHost = "valkey"
redisPort = 6379
redisMaxConnections = 30

[Config]
hmacKey = "{{ get $secrets "HMAC_KEY" }}"
base64Media = false
enableRSS = true
enableDebug = false
proxy = ""
proxyAuth = ""
tokenCount = 10

[Preferences]
theme = "Nitter"
replaceTwitter = "{{ get $secrets "HOST" }}"
replaceYouTube = ""
replaceReddit = ""
proxyVideos = true
hlsPlayback = false
infiniteScroll = false
